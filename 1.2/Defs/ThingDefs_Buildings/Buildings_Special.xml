        <statDef>MeditationFocusStrength</statDef>
        <focusTypes>
          <li>Natural</li>
        </focusTypes>
        <offsets>
          <li Class="FocusStrengthOffset_ArtificialBuildings">
            <radius>34.9</radius>
            <curve>
              <points>
                <li>(0,   0.0)</li>
                <li>(5,  -0.06)</li>
                <li>(10, -0.12)</li>
                <li>(50, -0.22)</li>
              </points>
            </curve>
          </li>
<li Class="FocusStrengthOffset_BuildingDefs">
    <defs>
