<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  
  <SitePartDef>
    <defName>VFEV_AncientRuins</defName>
    <label>ancient ruins</label>
    <description>Ancient ruins.</description>
    <workerClass>SitePartWorker_ItemStash</workerClass>
    <siteTexture>World/WorldObjects/Sites/GenericSite</siteTexture>
    <expandingIconTexture>UI/LegendaryGrave</expandingIconTexture>
    <handlesWorldObjectTimeoutInspectString>true</handlesWorldObjectTimeoutInspectString>
    <tags>
      <li>VFEV_ScatterRuinsSimple</li>
      <li>VFEV_ScatterShrines</li>
    </tags>
  </SitePartDef>

  <GenStepDef>
    <defName>VFEV_ScatterRuinsSimple</defName>
    <order>300</order>
    <genStep Class="GenStep_ScatterRuinsSimple">
      <allowInWaterBiome>false</allowInWaterBiome>
      <countPer10kCellsRange>2~6</countPer10kCellsRange>
    </genStep>
  </GenStepDef>

  <GenStepDef>
    <defName>VFEV_ScatterShrines</defName>
    <order>400</order>
    <genStep Class="GenStep_ScatterShrines">
      <allowInWaterBiome>false</allowInWaterBiome>
      <countPer10kCellsRange><min>0.12</min><max>0.25</max></countPer10kCellsRange>
    </genStep>
  </GenStepDef>

</Defs>