<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- Fenrir Hunt -->
  <SitePartDef>
    <defName>VFEV_FenrirHunt</defName>
    <label>fenrir hunt</label>
    <description>A legendary Fenrir has been sighted here. It will stay there for the foreseeable future but move on in time.</description>
    <!-- <workerClass>VFEV.SitePartWorker_BeastHunt</workerClass> -->
    <siteTexture>World/WorldObjects/Sites/GenericSite</siteTexture>
    <expandingIconTexture>UI/Hunt_Fenrir</expandingIconTexture>
    <handlesWorldObjectTimeoutInspectString>true</handlesWorldObjectTimeoutInspectString>
    <tags>
      <li>VFEV_FenrirHunt</li>
    </tags>
  </SitePartDef>

  <GenStepDef>
    <defName>VFEV_FenrirHuntGen</defName>
    <linkWithSite>VFEV_FenrirHunt</linkWithSite>
    <order>400</order>
    <genStep Class="VFEV.MapGeneration.BeastHuntEvents.GenStep_Fenrir">
      <count>1</count>
      <nearMapCenter>true</nearMapCenter>
    </genStep>
  </GenStepDef>

