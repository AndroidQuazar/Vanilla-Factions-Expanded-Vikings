<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <ThingDef ParentName="ArmorHelmetMakeableBase">
    <defName>VFEV_Apparel_GuardianHelmet</defName>
    <label>guardian helmet</label>
    <description>A strong medieval helmet that provides full-head coverage. While it offers fantastic protection, ones vision is grealy obscured, thus it is only recommended for front line infantry, particularly those foregoing shields.</description>
    <techLevel>Medieval</techLevel>
    <recipeMaker>
      <researchPrerequisite Inherit='False'>PlateArmor</researchPrerequisite>
      <recipeUsers Inherit='False'>
        <li>ElectricSmithy</li>
        <li>FueledSmithy</li>
      </recipeUsers>
      <skillRequirements>
        <Crafting>9</Crafting>
      </skillRequirements>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/BrigandineHelmet/BrigandineHelmet</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <WorkToMake>12000</WorkToMake>
      <MaxHitPoints>150</MaxHitPoints>
      <Mass>3.5</Mass>
      <StuffEffectMultiplierArmor>0.55</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.15</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>4</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <ShootingAccuracyPawn>-1</ShootingAccuracyPawn>
      <MeleeHitChance>1</MeleeHitChance>
    </equippedStatOffsets>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <costStuffCount>70</costStuffCount>
    <apparel>
      <bodyPartGroups>
        <li>FullHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/BrigandineHelmet/BrigandineHelmet</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags Inherit="False">
        <li>Apparel_VikingGuardian</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>

  <ThingDef ParentName="ArmorHelmetMakeableBase">
    <defName>VFEV_Apparel_LeatherHelmet</defName>
    <label>leather helmet</label>
