<Defs>

    <ThingDef ParentName="ArmorHelmetMakeableBase">
        <defName>VFEV_Apparel_GuardianHelmet</defName>
        <label>guardian helmet</label>
        <description>A bulky medieval helmet that provides full-head coverage. Offers a considerable amount of protectuon but restricts the wearer's field of vision.</description>
        <techLevel>Medieval</techLevel>
        <recipeMaker>
            <researchPrerequisite>PlateArmor</researchPrerequisite>
            <recipeUsers>
                <li>ElectricSmithy</li>
                <li>FueledSmithy</li>
            </recipeUsers>
            <skillRequirements>
                <Crafting>9</Crafting>
            </skillRequirements>
        </recipeMaker>
        <graphicData>
            <texPath>Things/Pawn/Humanlike/Apparel/BrigandineHelmet/BrigandineHelmet</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <statBases>
            <WorkToMake>12000</WorkToMake>
            <MaxHitPoints>150</MaxHitPoints>
            <Mass>3.5</Mass>
            <StuffEffectMultiplierArmor>0.55</StuffEffectMultiplierArmor>
            <StuffEffectMultiplierInsulation_Cold>0.15</StuffEffectMultiplierInsulation_Cold>
            <StuffEffectMultiplierInsulation_Heat>0</StuffEffectMultiplierInsulation_Heat>
            <EquipDelay>4</EquipDelay>
        </statBases>
        <equippedStatOffsets>
            <ShootingAccuracyPawn>-8</ShootingAccuracyPawn>
            <MeleeHitChance>-2</MeleeHitChance>
        </equippedStatOffsets>
        <stuffCategories>
            <li>Metallic</li>
        </stuffCategories>
        <costStuffCount>70</costStuffCount>
        <apparel>
            <bodyPartGroups>
                <li>FullHead</li>
            </bodyPartGroups>
            <wornGraphicPath>Things/Pawn/Humanlike/Apparel/BrigandineHelmet/BrigandineHelmet</wornGraphicPath>
            <layers>
                <li>Overhead</li>
            </layers>
			<tags Inherit="False">
				<li>Apparel_VikingGuardian</li>
			</tags>
            <defaultOutfitTags>
                <li>Soldier</li>
            </defaultOutfitTags>
        </apparel>
    </ThingDef>
	
