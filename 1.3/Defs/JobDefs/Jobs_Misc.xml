  </JobDef>

  <JobDef>
    <defName>VFEV_TendToApiary</defName>
    <driverClass>VFEV.JobDriver_TendToApiary</driverClass>
    <reportString>tending to TargetA.</reportString>
    <allowOpportunisticPrefix>true</allowOpportunisticPrefix>
  </JobDef>

  <JobDef>
    <defName>VFEV_ChangeFacepaint</defName>
    <driverClass>VFEV.Facepaint.JobDriver_ChangeFacepaint</driverClass>
    <reportString>changing facepaint at TargetA.</reportString>
    <allowOpportunisticPrefix>true</allowOpportunisticPrefix>
  </JobDef>

  <JobDef>
    <defName>VFEV_IgniteWithTorches</defName>
