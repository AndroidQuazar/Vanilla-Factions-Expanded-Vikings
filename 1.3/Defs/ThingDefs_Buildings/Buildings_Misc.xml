<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <ThingDef ParentName="BuildingBase">
    <defName>VFEV_Apiary</defName>
    <thingClass>VFEV.Apiary</thingClass>
    <label>apiary</label>
    <tickerType>Rare</tickerType>
    <description>A wooden box-like structure with a series of shelves, lattices, and chambers. When placed near flowers the apiary will naturally attract wild bees which will make it their new home. Over time these bees will produce honey which can be harvested and eaten directly, or later fermented into mead.</description>
    <graphicData>
      <texPath>Things/Building/Misc/Apiary</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(2,2)</drawSize>
      <shadowData>
        <volume>(1.5, 1.5, 1)</volume>
        <offset>(0,0,0)</offset>
      </shadowData>
    </graphicData>
    <size>(1,1)</size>
    <minifiedDef>MinifiedThing</minifiedDef>
    <thingCategories>
      <li>BuildingsMisc</li>
    </thingCategories>
    <rotatable>false</rotatable>
    <altitudeLayer>Building</altitudeLayer>
    <passability>Impassable</passability>
    <castEdgeShadows>false</castEdgeShadows>
    <fillPercent>1.0</fillPercent>
    <designationCategory>Misc</designationCategory>
    <canOverlapZones>false</canOverlapZones>
    <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
    <statBases>
      <MaxHitPoints>200</MaxHitPoints>
      <WorkToBuild>3000</WorkToBuild>
      <Flammability>0.5</Flammability>
      <Mass>20</Mass>
    </statBases>
    <building>
      <soundAmbient>VFEV_Apiary_Ambience</soundAmbient>
    </building>
    <stuffCategories>
      <li>Woody</li>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>90</costStuffCount>
    <holdsRoof>false</holdsRoof>
    <constructionSkillPrerequisite>6</constructionSkillPrerequisite>
    <uiIconScale>0.6</uiIconScale>
    <specialDisplayRadius>4.9</specialDisplayRadius>
    <researchPrerequisites>
      <li>VFEV_Beekeeping</li>
    </researchPrerequisites>
    <placeWorkers>
      <li>VFEV.Placeworker_Apiary</li>
    </placeWorkers>
  </ThingDef>

  <ThingDef ParentName="BuildingBase">
    <defName>VFE_TableFacePaints</defName>
    <label>face painting table</label>
    <thingClass>VFEV.Facepaint.Building_FacepaintingTable</thingClass>
    <description>A table with a vast assortments of pigments and brushes for face painting.</description>
    <graphicData>
      <texPath>Things/Building/Misc/TableFacePainting/TableFacePainting</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(3.5,1.5)</drawSize>
      <shadowData>
        <volume>(1, 1, 0.3)</volume>
        <offset>(0, 0, 0)</offset>
      </shadowData>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <costList>
      <WoodLog>20</WoodLog>
    </costList>
    <stuffCategories>
      <li>Stony</li>
      <li>Woody</li>
    </stuffCategories>
    <costStuffCount>25</costStuffCount>
    <altitudeLayer>Building</altitudeLayer>
    <fillPercent>0.5</fillPercent>
    <useHitPoints>True</useHitPoints>
    <statBases>
      <WorkToBuild>1500</WorkToBuild>
      <MaxHitPoints>100</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <Mass>15</Mass>
    </statBases>
    <canOverlapZones>false</canOverlapZones>
    <defaultPlacingRot>North</defaultPlacingRot>
    <minifiedDef>MinifiedThing</minifiedDef>
    <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
    <thingCategories>
      <li>BuildingsMisc</li>
    </thingCategories>
    <size>(1,1)</size>
    <designationCategory>Misc</designationCategory>
    <passability>PassThroughOnly</passability>
    <pathCost>70</pathCost>
    <uiIconScale>1.5</uiIconScale>
    <hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <surfaceType>Item</surfaceType>
  </ThingDef>

</Defs>
