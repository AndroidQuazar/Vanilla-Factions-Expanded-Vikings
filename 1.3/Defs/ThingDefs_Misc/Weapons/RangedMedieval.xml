<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <ThingDef ParentName="BaseWeaponNeolithic">
    <defName>VFE_ThrowingAxe</defName>
    <label>throwing axe</label>
    <description>A single-handed axe made for throwing. Light enough to be thrown accurately at medium range, it's also a great melee weapon in the hands of a capable warrior.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponRanged/ThrowingAxe</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_BeatFire</soundInteract>
    <costStuffCount>65</costStuffCount>
    <equippedAngleOffset>-65</equippedAngleOffset>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
    </stuffCategories>
    <techLevel>Medieval</techLevel>
    <statBases>
      <WorkToMake>7200</WorkToMake>
      <Mass>1.2</Mass>
      <AccuracyTouch>0.82</AccuracyTouch>
      <AccuracyShort>0.68</AccuracyShort>
      <AccuracyMedium>0.30</AccuracyMedium>
      <AccuracyLong>0.10</AccuracyLong>
      <RangedWeapon_Cooldown>1.8</RangedWeapon_Cooldown>
    </statBases>
    <weaponTags>
      <li>VikingRangedBasic</li>
    </weaponTags>
    <weaponClasses>
      <li>Vikings</li>
    </weaponClasses>
    <recipeMaker>
      <recipeUsers Inherit="False">
        <li>FueledSmithy</li>
        <li>ElectricSmithy</li>
      </recipeUsers>
      <researchPrerequisite>Smithing</researchPrerequisite>
      <skillRequirements>
        <Crafting>5</Crafting>
      </skillRequirements>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>VFEV_ThrowingAxe_Thrown</defaultProjectile>
        <warmupTime>3.6</warmupTime>
        <range>7.5</range>
        <soundCast>Interact_BeatFire</soundCast>
      </li>
    </verbs>
    <tools>
      <li>
        <label>handle</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>blade</label>
        <capacities>
          <li>Cut</li>
        </capacities>
        <power>12</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
    <modExtensions>
      <li Class="VFECore.ThingDefExtension">
        <usableWithShields>true</usableWithShields>
      </li>
    </modExtensions>
  </ThingDef>

  <ThingDef ParentName="BaseProjectileNeolithic">
    <defName>VFEV_ThrowingAxe_Thrown</defName>
    <label>thrown axe</label>
    <graphicData>
      <texPath>Things/Projectile/AxeThrown</texPath>
      <graphicClass>Graphic_Flicker</graphicClass>
    </graphicData>
    <projectile>
      <flyOverhead>false</flyOverhead>
      <damageDef>RangedStab</damageDef>
      <damageAmountBase>18</damageAmountBase>
      <stoppingPower>2</stoppingPower>
      <armorPenetrationBase>0.25</armorPenetrationBase>
      <speed>45</speed>
    </projectile>
  </ThingDef>

  <ThingDef ParentName="BaseWeaponNeolithic">
    <defName>VFE_Harpoon</defName>
    <label>harpoon</label>
    <description>A long spear-like weapon usually used in fishing and hunting. Can be thrown over a very long distance and has a significant stopping power. This weapon represents a bundle of harpoons and can be thrown over and over.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponRanged/Harpoon</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_BeatFire</soundInteract>
    <costStuffCount>50</costStuffCount>
    <techLevel>Medieval</techLevel>
    <costList>
      <WoodLog>40</WoodLog>
      <Steel>40</Steel>
    </costList>
    <statBases>
      <WorkToMake>7000</WorkToMake>
      <Mass>4</Mass>
      <AccuracyTouch>0.50</AccuracyTouch>
      <AccuracyShort>0.68</AccuracyShort>
      <AccuracyMedium>0.52</AccuracyMedium>
      <AccuracyLong>0.42</AccuracyLong>
      <RangedWeapon_Cooldown>4</RangedWeapon_Cooldown>
    </statBases>
    <weaponTags>
      <li>VikingRangedBasic</li>
    </weaponTags>
    <weaponClasses>
      <li>Vikings</li>
    </weaponClasses>
    <recipeMaker>
      <recipeUsers Inherit="False">
        <li>FueledSmithy</li>
        <li>ElectricSmithy</li>
        <li>CraftingSpot</li>
      </recipeUsers>
      <researchPrerequisite>LongBlades</researchPrerequisite>
      <skillRequirements>
        <Crafting>5</Crafting>
      </skillRequirements>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>VFEV_Harpoon_Thrown</defaultProjectile>
        <warmupTime>3.6</warmupTime>
        <range>19.9</range>
        <soundCast>Interact_BeatFire</soundCast>
      </li>
    </verbs>
    <tools>
      <li>
        <label>handle</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>point</label>
        <capacities>
          <li>Stab</li>
        </capacities>
        <power>12</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
    <modExtensions>
      <li Class="VFECore.ThingDefExtension">
        <usableWithShields>true</usableWithShields>
      </li>
    </modExtensions>
  </ThingDef>

  <ThingDef ParentName="BaseProjectileNeolithic">
    <defName>VFEV_Harpoon_Thrown</defName>
    <label>thrown harpoon</label>
    <thingClass>VFEV.BulletStun</thingClass>
    <graphicData>
      <texPath>Things/Projectile/ThrownHarpoon</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <flyOverhead>false</flyOverhead>
      <damageDef>RangedStab</damageDef>
      <damageAmountBase>22</damageAmountBase>
      <stoppingPower>2</stoppingPower>
      <armorPenetrationBase>0.35</armorPenetrationBase>
      <speed>30</speed>
    </projectile>
  </ThingDef>

</Defs>
