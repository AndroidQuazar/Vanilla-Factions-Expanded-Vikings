<?xml version="1.0" encoding="utf-8" ?>
<Defs>  
  <CultureDef>
    <defName>Vikings</defName>
    <label>vikings</label>
    <description>A harsh norse culture common among the vikings.</description>
    <pawnNameMaker>NamerPersonViking</pawnNameMaker>
    <ideoNameMaker MayRequire="Ludeon.RimWorld.Ideology">NamerIdeoCorunan</ideoNameMaker>
    <deityNameMaker MayRequire="Ludeon.RimWorld.Ideology">VFEV_NamerDeityVikings</deityNameMaker>
    <deityTypeMaker MayRequire="Ludeon.RimWorld.Ideology">DeityTypeMakerCorunan</deityTypeMaker>
    <festivalNameMaker MayRequire="Ludeon.RimWorld.Ideology">NamerFestivalCorunan</festivalNameMaker>
    <leaderTitleMaker MayRequire="Ludeon.RimWorld.Ideology">LeaderTitleMaker_Corunan</leaderTitleMaker>
    <allowedPlaceTags>
      <li>OriginTribal</li>
    </allowedPlaceTags>
    <iconPath>World/WorldObjects/Expanding/Village</iconPath>
    <iconColor>(0.8, 0.8, 0.8)</iconColor>
    <preferredWeaponClasses>
      <noble>Vikings</noble>
      <despised>Ultratech</despised>
    </preferredWeaponClasses>
    <styleItemTags>
      <li>
        <tag>Tribal</tag>
        <baseWeight>1</baseWeight>
        <weightFactor>1</weightFactor>
      </li>
      <li>
        <tag>NoBeard</tag>
        <baseWeight>0.25</baseWeight>
        <weightFactor>1</weightFactor>
      </li>
      <li>
        <tag>BeardTribal</tag>
        <baseWeight>0.85</baseWeight>
        <weightFactor>1</weightFactor>
      </li>
      <li>
        <tag>TattooBodyTribal</tag>
        <baseWeight>0.4</baseWeight>
        <weightFactor>1</weightFactor>
      </li>
      <li>
        <tag>NoTattoo</tag>
        <baseWeight>1</baseWeight>
        <weightFactor>1</weightFactor>
      </li>
    </styleItemTags>
  </CultureDef>

  <RulePackDef MayRequire="Ludeon.RimWorld.Ideology">
    <defName>VFEV_NamerDeityVikings</defName>
    <include>
      <li>NamerDeityGlobal</li>
      <li>NamerPersonVikingUtility</li>
    </include>
    <rulePack>
      <rulesStrings>
        <li>name->[syl][end]</li>
        <li>name->[syl]'[end]</li>

        <li>syl->[NorseNames]</li>

        <li>end->abrei</li>
        <li>end->tro</li>
        <li>end->ox</li>
        <li>end->brin</li>
        <li>end->bai</li>
        <li>end->bust</li>
        <li>end->vast</li>
        <li>end->varg</li>
        <li>end->vix</li>
        <li>end->tor</li>
        <li>end->tear</li>
        <li>end->cut</li>
        <li>end->lop</li>
        <li>end->oze</li>
        <li>end->ozzle</li>
        <li>end->latch</li>
        <li>end->lock</li>
        <li>end->burn</li>
        <li>end->sear</li>
        <li>end->shank</li>
        <li>end->hurt</li>
        <li>end->vash</li>
        <li>end->warg</li>
        <li>end->wug</li>
        <li>end->thot</li>
        <li>end->thard</li>
        <li>end->thad</li>
      </rulesStrings>
    </rulePack>
  </RulePackDef>

  <WeaponClassDef>
    <defName>Vikings</defName>
    <label>vikings</label>
  </WeaponClassDef>
</Defs>
