    <ThingDef ParentName="ArmorSmithableBase">
        <defName>VFEV_Apparel_GuardianArmor</defName>
        <label>guardian armor</label>
        <description>placeholder</description>
        <graphicData>
            <texPath>Things/Pawn/Humanlike/Apparel/GuardianArmor/GuardianArmor</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
		<techLevel>Medieval</techLevel>
        <recipeMaker>
            <unfinishedThingDef>UnfinishedMetallicTechArmor</unfinishedThingDef>
            <researchPrerequisite>PlateArmor</researchPrerequisite>
