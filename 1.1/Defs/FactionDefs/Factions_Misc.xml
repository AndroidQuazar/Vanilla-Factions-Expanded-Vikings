<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <FactionDef ParentName="HumanFactionBase" Name="VFEV_VikingBase" Abstract="True">
        <pawnSingular>nordsman</pawnSingular>
        <pawnsPlural>nordspeople</pawnsPlural>
        <categoryTag>VFEV_Vikings</categoryTag>
        <listOrderPriority>20</listOrderPriority>
        <settlementGenerationWeight>1</settlementGenerationWeight>
        <requiredCountAtGameStart>1</requiredCountAtGameStart>
        <canMakeRandomly>true</canMakeRandomly>
        <canStageAttacks>true</canStageAttacks>
        <factionIconPath>World/WorldObjects/Expanding/Village</factionIconPath>
        <geneticVariance>0.1</geneticVariance>
        <factionNameMaker>NamerFactionTribal</factionNameMaker>
        <settlementNameMaker>NamerSettlementTribal</settlementNameMaker>
        <pawnNameMaker>NamerPersonTribal</pawnNameMaker>
        <techLevel>Medieval</techLevel>
        <backstoryFilters>
            <li>
                <categories>
                    <li>Tribal</li>
                </categories>
            </li>
        </backstoryFilters>
        <leaderTitle>jarl</leaderTitle>
        <hairTags>
            <li>Tribal</li>
            <li>VFEV_Vikings</li>
        </hairTags>
        <caravanTraderKinds>
            <li>Caravan_Neolithic_BulkGoods</li>
            <li>Caravan_Neolithic_WarMerchant</li>
            <li>Caravan_Neolithic_Slaver</li>
            <li>Caravan_Neolithic_ShamanMerchant</li>
        </caravanTraderKinds>
        <visitorTraderKinds>
            <li>Visitor_Neolithic_Standard</li>
        </visitorTraderKinds>
        <baseTraderKinds>
            <li>Base_Neolithic_Standard</li>
        </baseTraderKinds>
        <allowedArrivalTemperatureRange>-55~25</allowedArrivalTemperatureRange>
        <raidCommonalityFromPointsCurve>
            <points>
                <li>(0, 1)</li>
                <!--Constant 1 at all points levels-->
            </points>
        </raidCommonalityFromPointsCurve>
        <maxPawnCostPerTotalPointsCurve>
            <points>
                <li>(0,35)</li>
                <li>(70, 50)</li>
                <li>(800, 100)</li>
                <li>(1300, 150)</li>
                <li>(100000, 10000)</li>
            </points>
        </maxPawnCostPerTotalPointsCurve>
        <pawnGroupMakers>
            <li>
                <!-- Normal fights, ranged with melee mix-ins -->
                <kindDef>Combat</kindDef>
                <commonality>100</commonality>
                <options>
                    <VFEV_Raider>25</VFEV_Raider>
                    <VFEV_Pillager>20</VFEV_Pillager>
                    <VFEV_Berserker>10</VFEV_Berserker>
					<VFEV_Shieldbearer>15</VFEV_Shieldbearer>
                    <VFEV_HousecarlMelee>1</VFEV_HousecarlMelee>
                </options>
            </li>
            <li>
                <!-- Normal fights, ranged only -->
                <kindDef>Combat</kindDef>
                <commonality>60</commonality>
                <options>
                    <VFEV_Archer>10</VFEV_Archer>
                    <VFEV_Arbalist>10</VFEV_Arbalist>
                    <VFEV_HeavyArcher>10</VFEV_HeavyArcher>
                    <VFEV_HeavyArbalist>10</VFEV_HeavyArbalist>
                    <VFEV_HousecarlRanged>1</VFEV_HousecarlRanged>
                </options>
            </li>
            <li>
                <!-- Normal fights, melee only -->
                <kindDef>Combat</kindDef>
                <commonality>40</commonality>
                <options>
                    <VFEV_Raider>25</VFEV_Raider>
                    <VFEV_Pillager>20</VFEV_Pillager>
                    <VFEV_Berserker>10</VFEV_Berserker>
					<VFEV_Shieldbearer>15</VFEV_Shieldbearer>
                    <VFEV_HeavyArcher>10</VFEV_HeavyArcher>
                    <VFEV_HeavyArbalist>10</VFEV_HeavyArbalist>
                </options>
            </li>
        </pawnGroupMakers>
        <settlementTexturePath>World/WorldObjects/TribalSettlement</settlementTexturePath>
		<modExtensions>
            <li Class="VFECore.FactionDefExtension">
				<allowedBiomes>
					<!--
					<li>IceSheet</li>
					<li>SeaIce</li> -->
				    <li>BorealForest</li>
					<li>ColdBog</li>
					<li>TemperateForest</li>
					<li>TemperateSwamp</li>
					<li>Tundra</li>
				</allowedBiomes>
            </li>
        </modExtensions>
    </FactionDef>

