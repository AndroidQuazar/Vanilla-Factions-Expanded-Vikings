<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <DamageDef Name="VFEV_CryptoDamageBullet">
        <defName>VFEV_CryptoDamageBullet</defName>
        <label>bullet</label>
        <workerClass>DamageWorker_AddInjury</workerClass>
        <externalViolence>true</externalViolence>
        <deathMessage>{0} has been shot to death.</deathMessage>
        <hediff>Gunshot</hediff>
        <harmAllLayersUntilOutside>true</harmAllLayersUntilOutside>
        <impactSoundType>Bullet</impactSoundType>
        <armorCategory>Sharp</armorCategory>
        <overkillPctToDestroyPart>0~0.7</overkillPctToDestroyPart>
        <isRanged>true</isRanged>
        <makesAnimalsFlee>true</makesAnimalsFlee>
    </DamageDef>

    <DamageDef ParentName="VFEV_CryptoDamageBullet">
        <defName>VFEV_CryptoDamageBulletEffect</defName>
        <label>cryptogenic coating</label>
        <additionalHediffs>
            <li>
                <hediff>Hypothermia</hediff>
                <severityPerDamageDealt>0.7</severityPerDamageDealt>
                <victimSeverityScaling>ComfyTemperatureMin</victimSeverityScaling>
            </li>
        </additionalHediffs>
    </DamageDef>

    <DamageDef Name="VFEV_CryptoDamageBolt">
        <defName>VFEV_CryptoDamageBolt</defName>
        <label>bolt</label>
        <workerClass>DamageWorker_AddInjury</workerClass>
        <externalViolence>true</externalViolence>
        <deathMessage>{0} has been shot to death by a crossbow bolt.</deathMessage>
        <hediff>Stab</hediff>
        <hediffSolid>Crack</hediffSolid>
        <impactSoundType>Slice</impactSoundType>
        <armorCategory>Sharp</armorCategory>
        <harmAllLayersUntilOutside>true</harmAllLayersUntilOutside>
        <overkillPctToDestroyPart>0~0.7</overkillPctToDestroyPart>
        <isRanged>true</isRanged>
        <makesAnimalsFlee>true</makesAnimalsFlee>
    </DamageDef>

    <DamageDef ParentName="VFEV_CryptoDamageBolt">
        <defName>VFEV_CryptoDamageBoltEffect</defName>
        <label>cryptogenic coating</label>
        <additionalHediffs>
            <li>
                <hediff>Hypothermia</hediff>
                <severityPerDamageDealt>0.100</severityPerDamageDealt>
                <victimSeverityScaling>ComfyTemperatureMin</victimSeverityScaling>
            </li>
        </additionalHediffs>
    </DamageDef>

</Defs>