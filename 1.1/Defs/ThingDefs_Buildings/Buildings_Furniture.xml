    <ThingDef ParentName="BuildingBase">
        <defName>VFEV_Candelabra</defName>
        <label>candelabra</label>
        <description>A floor-standing, sturdy lamp raised to about chest height. Puts of a pleasing, inviting hue of flame when burning logs. Meant primarily for lighting and gives off surprisingly little heat.</description>
        <category>Building</category>
        <graphicData>
            <texPath>Things/Building/Misc/Candelabra</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawRotated>false</drawRotated>
            <damageData>
                <rect>(0.35,0.35,0.3,0.3)</rect>
            </damageData>
        </graphicData>
        <uiIconPath>Things/Building/Misc/Candelabra</uiIconPath>
        <uiIconScale>0.85</uiIconScale>
        <rotatable>false</rotatable>
        <altitudeLayer>Building</altitudeLayer>
        <passability>PassThroughOnly</passability>
        <pathCost>8</pathCost>
        <constructEffect>ConstructWood</constructEffect>
        <tickerType>Normal</tickerType>
        <drawerType>RealtimeOnly</drawerType>
        <fillPercent>0.15</fillPercent>
        <statBases>
            <MaxHitPoints>80</MaxHitPoints>
            <WorkToBuild>100</WorkToBuild>
            <Flammability>0</Flammability>
        </statBases>
        <selectable>true</selectable>
        <costList>
            <WoodLog>20</WoodLog>
        </costList>
        <building>
            <artificialForMeditationPurposes>false</artificialForMeditationPurposes>
        </building>
        <soundImpactDefault>BulletImpact_Ground</soundImpactDefault>
        <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
        <resourcesFractionWhenDeconstructed>0</resourcesFractionWhenDeconstructed>
        <placeWorkers>
            <li>PlaceWorker_Heater</li>
        </placeWorkers>
        <drawPlaceWorkersWhileSelected>true</drawPlaceWorkersWhileSelected>
        <comps>
            <li Class="CompProperties_Glower">
                <glowRadius>10</glowRadius>
                <glowColor>(252,187,113,0)</glowColor>
            </li>
        </comps>
        <designationCategory>Furniture</designationCategory>
    </ThingDef>

</Defs>